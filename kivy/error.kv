<Error>
    FloatLayout:
        id: error
        canvas.before:
            Rectangle:
                size: self.size
                source: root.errorpage
        
        CommonLabel:
            id: error_label
            text: root.error_message
            color: (.9, .1, .1, 1)
            font_size: root.title_font_size
            pos_hint: {'left': 0, 'top': 0.93}
            size_hint: 1, .1
        
        GridLayout:
            spacing: 20, 20
            cols: 2
            rows: 1
            pos_hint: {'center_x': .494, 'y': .2}
            size_hint: 0.5, 0.2 
            
            SmoothButton:
                text: 'Riprova'
                font_size: root.button_font_size
                on_release: root.retry()
                press_color: (0, .4, .8, .7)
                
            SmoothButton:
                text: 'Esci'
                font_size: root.button_font_size
                on_release: app.stop()
                press_color: (1, 0, 0, .7)
